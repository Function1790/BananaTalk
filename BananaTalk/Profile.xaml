<UserControl x:Class="BananaTalk.Profile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BananaTalk"
             mc:Ignorable="d" 
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave"
             d:DesignHeight="65" d:DesignWidth="535" Background="White">
    <Grid x:Name="BG">
        <Rectangle x:Name="profile_image" Cursor="Hand" HorizontalAlignment="Left" Height="53" Margin="10,0,0,0" VerticalAlignment="Center" Width="53" RadiusY="20" RadiusX="20">
            <Rectangle.Fill>
                <ImageBrush ImageSource="BaseProfile.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="profile_name" HorizontalAlignment="Left" Margin="75,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Bold"><Run Text="스폰지"/><Run Text="밥"/></TextBlock>

    </Grid>
</UserControl>
